<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="400">
    <Grid>
        <Label x:Name="text_login" Content="Login" Margin="142,10,142,0" VerticalAlignment="Top" RenderTransformOrigin="-0.743,-2.141" FontSize="36"/>
        <TextBlock x:Name="textBlock_username" HorizontalAlignment="Left" Margin="25,137,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" RenderTransformOrigin="-1.216,0.64" FontSize="16"/>
        <TextBlock x:Name="textBlock_password" HorizontalAlignment="Left" Margin="25,185,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" RenderTransformOrigin="-1.216,0.64" FontSize="16"/>
        <TextBox x:Name="textBox_username" Height="25" Margin="125,137,32,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="passwordBox_password" Margin="125,185,32,0" VerticalAlignment="Top" Height="25" FontSize="16"/>
        <Button x:Name="buttonLogin" Content="Login" HorizontalAlignment="Left" Margin="125,227,0,0" VerticalAlignment="Top" Width="125" Height="71" FontSize="20" Click="ButtonLogin_Click"/>

    </Grid>
</Window>
